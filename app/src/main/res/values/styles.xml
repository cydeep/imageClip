<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ClipBaseTheme" parent="@style/Theme.AppCompat.Light">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/clip_fbfbfb</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/clip_black_FF5E6066</item>
        <!-- 文字颜色 -->
        <item name="android:textColorPrimary">@color/clip_black_FF5E6066</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/clip_white</item>
        <item name="colorAccent">@color/clip_gray</item>
        <item name="editTextColor">@color/clip_gray</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/clip_gray_FAFAFA</item>

        <item name="textAllCaps">false</item>

    </style>
</resources>
